<p id="notice"><%= notice %></p>

<%= form_tag("/", method: "get") do %>
  <%= label_tag(:title, "Search for:") %>
  <%= search_field(:movie, :title) %>

  <%= submit_tag("Search") %>
<% end %>

<h1>Movies</h1>
<% @movies.each do |movie| %>
  <%= render partial: "movie", locals: {movie: movie} %>
<% end %>
